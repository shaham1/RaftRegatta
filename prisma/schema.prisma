generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_URL") 
  directUrl = env("POSTGRES_URL_NON_POOLING") 
}

enum RoundStatus {
  OPEN
  CLOSED
}

model ItemCategory {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  images      ItemImage[]
}

model ItemImage {
  id         Int          @id @default(autoincrement())
  categoryId Int
  imageData  String       
  category   ItemCategory @relation(fields: [categoryId], references: [id])
  rounds     Round[]
}

model Teams {
  id       Int @id @default(autoincrement())
  teamNo   String    @unique
  teamName String
  budget Float @default(50000)
  apiKey   String @unique
}

model Round {
  id          Int        @id @default(autoincrement())
  itemImageId Int?
  itemImage   ItemImage? @relation(fields: [itemImageId], references: [id])
  status    RoundStatus @default(OPEN)
  startTime DateTime    @default(now())
  endTime   DateTime?

  bids Bid[]
}

model Bid {
  id        Int      @id @default(autoincrement())
  roundId   Int
  teamNo    String
  teamName  String
  item      String
  amount    Float
  createdAt DateTime @default(now())

  round Round @relation(fields: [roundId], references: [id])

  @@unique([roundId, teamNo])
}